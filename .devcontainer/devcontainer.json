{
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": false,
			"installOhMyZsh": false,
			"installOhMyZshConfig": false
		},
		"ghcr.io/devcontainers/features/git:1": {
			"ppa": "false"
		},
		"ghcr.io/prulloac/devcontainer-features/latex:1": {
			"packages": "chktex, latexindent, biblatex, biber"
		},
		"ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
			"packages": "make, tex-fmt",
			"upgradePackages": true
		}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"editor.formatOnSave": true,
				"latex-workshop.latex.external.build.command": "make",
				"latex-workshop.formatting.latex": "tex-fmt",
				"latex-workshop.intellisense.citation.backend": "biblatex",
				"latex-workshop.latex.clean.command": "make",
				"latex-workshop.latex.clean.args": [
					"clean-tmp"
				],
				"latex-workshop.latex.external.build.args": [
					"all"
				],
				"latex-workshop.linting.chktex.enabled": true
			}
		}
	},
	// // Para podman com SELinux
	// "securityOpt": [
	// 	"label=disable"
	// ],
	// "remoteEnv": {
	// 	"PODMAN_USERNS": "keep-id"
	// },
	"remoteUser": "vscode"
}